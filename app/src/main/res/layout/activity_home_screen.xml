<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">

    <include
        android:id="@+id/top_header_digital_book_item"
        layout="@layout/title_bar_heath_book"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:layout_below="@+id/top_header_digital_book_item"
        android:id="@+id/tl_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_toolbar" />

    <include
        android:id="@+id/tl_toolbar_family_queue"
        layout="@layout/item_top_family_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_toolbar"></include>

    <FrameLayout
        android:id="@+id/fm_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_toolbar_family_queue" />

    <TextView
        android:id="@id/txt_page_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_text"
        android:textSize="@dimen/dp_16" />
</RelativeLayout>
