<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_layout_drawer_hosp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/patient_item"
    android:layout_centerVertical="true"
    android:background="@drawable/selector_image_pressed_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_hosp_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="center"
        android:src="@drawable/patient_queue"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_hosp_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_hosp_list_count"
        android:layout_toRightOf="@+id/img_hosp_list_item_image"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dp_22"

        />

    <TextView
        android:id="@+id/txt_hosp_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:paddingEnd="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_25"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dp_22"

        />

</RelativeLayout>