<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/header_blue_color"
    android:splitMotionEvents="false"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">


        <ImageButton
            android:id="@+id/ibtn_toolbar_left_action_button"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_35"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/selector_header_menu"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/ibtn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ibtn_toolbar_left_action_button"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_header_search" />

        <ImageButton
            android:id="@+id/ibtn_add_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ibtn_toolbar_left_action_button"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ibtn_search"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_big_pluse" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ibtn_toolbar_left_action_button"
            android:layout_toLeftOf="@+id/ibtn_add_patient"
            android:layout_toRightOf="@+id/ibtn_toolbar_left_action_button"
            android:text=""
            android:maxLength="60"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/white_text"
            android:textSize="@dimen/dp_22" />

        <TextView
            android:id="@+id/txt_doctor_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_title"
            android:layout_toLeftOf="@+id/ibtn_add_patient"
            android:layout_toRightOf="@+id/ibtn_toolbar_left_action_button"
            android:layout_below="@+id/txt_title"
            android:textColor="@color/white_text"
            android:maxLength="60"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/dp_22" />

        <TextView
            android:id="@+id/txt_hospital_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignLeft="@+id/txt_doctor_name"
            android:layout_alignRight="@+id/txt_doctor_name"
            android:layout_toRightOf="@+id/ibtn_toolbar_left_action_button"
            android:layout_below="@+id/txt_doctor_name"
            android:textColor="@color/white_text"
            android:maxLength="60"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/dp_22" />


    </RelativeLayout>


</android.support.v7.widget.Toolbar>
