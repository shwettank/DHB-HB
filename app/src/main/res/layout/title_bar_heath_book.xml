<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_power_digital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="#33b5ff"
        android:layout_centerVertical="true"
        android:textSize="@dimen/dp_30"
        android:text="@string/digital" />

    <TextView
        android:id="@+id/txt_power_heath_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#31bf00"
        android:layout_toRightOf="@+id/txt_power_digital"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:textSize="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="@string/health_book" />


